import java.util.Map;  
import java.util.HashMap;  
import java.util.Random; 
 
public class Responder {  
   private Map<String, String> responses;  
   private Random random;  
   public Responder() {  
     responses = new HashMap<>();  
     random = new Random();  
     // beberapa pasangan kata kunci â†’ respons  
     responses.put("penuh", "Hubungi himpunan untuk membuka form kelas tambahan.");  
     responses.put("eror", "Coba reload halaman FRS.");  
     responses.put("captcha", "Coba reload halaman FRS.");  
     responses.put("merah", "Warna merah pada kelas berarti kapasitas kelas sudah penuh.");  
     responses.put("tidak bisa", "Lakukan kembali hal sebelumnya.");
     responses.put("masih", "Jika masih tidak bisa, coba hubungi contact person berikut 081234567890.");
     responses.put("lama", "Cek koneksi internet anda.");
     responses.put("lambat", "Cek koneksi internet anda.");
     responses.put("full", "Hubungi himpunan untuk membuka form kelas tambahan.");
     responses.put("loading", "Cek koneksi ineternet anda.");
   }  
   public String generateResponse(String userInput) {  
     String[] words = userInput.toLowerCase().split("\\s+");  
     for (String w : words) {  
       if (responses.containsKey(w)) {  
         return responses.get(w);  
       }  
     }  
     // kalau tidak ada kata kunci cocok, jawaban acak generik  
     String[] generic = {  
       "Coba jelaskan lebih rinci.",  
       "Saya belum mengerti, bisa ulangi?",  
       "Bisakah Anda memberi detail lebih lanjut?"  
     };  
     return generic[random.nextInt(generic.length)];  
   } 
 }  
